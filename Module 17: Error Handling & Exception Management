# FUNCTION 1: Handle Runtime Error
FUNCTION Handle_Error(Error_Code, Error_Message):
    LOG "Error occurred: " + Error_Code + " - " + Error_Message
    NOTIFY_ADMIN(Error_Code, Error_Message)
    RETURN "Error logged and admin notified."

# FUNCTION 2: Retry Mechanism
FUNCTION Retry_Operation(Operation, Max_Retries):
    ATTEMPTS = 0
    WHILE ATTEMPTS < Max_Retries:
        RESULT = Operation()
        IF RESULT == "Success":
            RETURN RESULT
        ELSE:
            ATTEMPTS += 1
            LOG "Retry attempt #" + ATTEMPTS
    END WHILE
    RETURN "Operation failed after max retries."

# FUNCTION 3: Exception Catching Wrapper
FUNCTION Execute_With_Exception_Handling(Operation):
    TRY:
        RESULT = Operation()
        RETURN RESULT
    CATCH Exception AS e:
        RETURN Handle_Error(e.Code, e.Message)

# MAIN EXECUTION FLOW
START:
    EXECUTE_CRITICAL_TASK = WRAP_WITH Execute_With_Exception_Handling(Critical_Task)
    LOG "Task executed with error handling safeguards."
```
