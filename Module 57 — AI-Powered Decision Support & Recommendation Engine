# Module 57 â€” AI-Powered Decision Support & Recommendation Engine

class RecommendationEngine:
    def __init__(self):
        self.recommendations = []

    def generate_recommendation(self, options, scoring_function):
        scored_options = [(option, scoring_function(option)) for option in options]
        scored_options.sort(key=lambda x: x[1], reverse=True)
        self.recommendations = scored_options
        return self.recommendations

# Example usage:
# engine = RecommendationEngine()
# options = ["Action A", "Action B", "Action C"]
# scoring = lambda x: {"Action A": 80, "Action B": 95, "Action C": 70}[x]
# recommendations = engine.generate_recommendation(options, scoring)
# print(recommendations)
